<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.junyu.android.multimodestoggle.MainActivity$PlaceholderFragment"
    android:background="#F0FFFF" >

    <LinearLayout
        android:id= "@+id/wifi_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#DCDCDC"
        android:padding="10px"
        android:layout_marginBottom="10px">
        
        <ImageButton
	        android:id="@+id/wifi_mode_button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/wifi_icon_72x72"
	        android:layout_weight="1"
	        android:padding="10px" />
	    
	    <ImageButton 
	        android:id="@+id/back_to_normal_mode"
	        android:layout_toRightOf="@id/wifi_mode_button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/wifi_disconnected_icon_72x72"
	        android:layout_weight="1"
	        android:padding="10px"/>
	    
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/silent_mode_layout"
        android:layout_below="@id/wifi_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#DCDCDC"
        android:padding="10px"
        android:layout_marginBottom="10px">
        
        <ImageButton
	        android:id="@+id/silent_mode_button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/silent_mode_icon_72x72"
	        android:layout_weight="1"
	        android:padding="10px" />
	    
	    <ImageButton 
	        android:id="@+id/silent_to_normal_mode"
	        android:layout_toRightOf="@id/silent_mode_button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/normal_mode_icon_72x72"
	        android:layout_weight="1"
	        android:padding="10px"/>
        
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/blue_tooth_layout"
        android:layout_below="@id/silent_mode_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#DCDCDC"
        android:padding="10px">
        
        <ImageButton
	        android:id="@+id/bluetooth_open"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/bluetooth_open_72x72"
	        android:layout_weight="1"
	        android:padding="10px" />
	    
	    <ImageButton 
	        android:id="@+id/bluetooth_close"
	        android:layout_toRightOf="@id/bluetooth_open"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/bluetooth_close_72x72"
	        android:layout_weight="1"
	        android:padding="10px"/>
        
    </LinearLayout>
	    
	    

</RelativeLayout>
